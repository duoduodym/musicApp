page{
	height:100%;
}

@font-face {
  font-family: 'iconfont';
  src: url('https://at.alicdn.com/t/font_1446288_7wmh4c92ql5.ttf') format('truetype');
}

.search-wrap .search-scroll {
  position: absolute;
  top: 340rpx;
  left: 0;
  width: 100%;
  bottom: 0;
  padding: 0 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.search-wrap .search-scroll .title {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  height: 100rpx;
  font-size: 36rpx;
}
.search-wrap .search-scroll .title .icon {
  width: 8rpx;
  background: #d43c33;
  height: 40rpx;
  margin-right: 10rpx;
}
.search-wrap .search-scroll .tag-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
}
.search-wrap .search-scroll .tag-list .tag {
  margin-right: 20rpx;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  border: 1px solid #e5e5e5;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  color: #666;
}
.search-wrap .search-scroll .search-list .search-item {
  height: 120rpx;
  border-bottom: 1px solid #e5e5e5;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.search-wrap .search-scroll .search-list .search-item .small-pic {
  width: 90rpx;
  height: 90rpx;
}
.search-wrap .search-scroll .search-list .search-item .info {
  margin-left: 20rpx;
}
.search-wrap .search-scroll .search-list .search-item .info .item-title {
  font-size: 32rpx;
  color: #666;
}
.search-wrap .search-scroll .search-list .search-item .info .item-author {
  font-size: 32rpx;
  color: #999;
}

