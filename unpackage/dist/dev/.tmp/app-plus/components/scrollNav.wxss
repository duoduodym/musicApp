.scroll-nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  background: #fff;
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 0 10rpx;
  height: 100rpx;
}
.scroll-nav .scroll-view-item_H {
  display: inline-block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  text-align: center;
  padding: 0 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
}
.scroll-nav .scroll-view-item_H .text-wrap {
  max-width: 100%;
  position: relative;
}
.scroll-nav .scroll-view-item_H .text-wrap .text {
  color: #666;
  font-size: 36rpx;
}
.scroll-nav .scroll-view-item_H .text-wrap .text:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -1px;
  z-index: 3;
  width: 100%;
  height: 4px;
  -webkit-transform: scaleY(0.5);
  background: #1296db;
  visibility: hidden;
  opacity: 0;
}
.scroll-nav .scroll-view-item_H.active .text {
  color: #1296db;
}
.scroll-nav .scroll-view-item_H.active .text:after {
  visibility: visible;
  opacity: 1;
}

